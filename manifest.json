{
  "manifest_version": 3,
  "name": "Mood Notetaker",
  "version": "0.1",
  "description": "Real-time emotion tracking and meeting notes for video calls",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.zoom.us/*",
    "https://meet.google.com/*",
    "https://teams.microsoft.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.zoom.us/*", 
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["content/face-api/*", "content/models/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 